<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mychat.mapper.ChatMessageMapper">

    <resultMap id="BaseResultMap" type="com.mychat.entity.po.ChatMessage">
            <id property="messageId" column="message_id" />
            <result property="sessionId" column="session_id" />
            <result property="messageType" column="message_type" />
            <result property="messageContent" column="message_content" />
            <result property="sendUserId" column="send_user_id" />
            <result property="sendUserNickName" column="send_user_nick_name" />
            <result property="sendTime" column="send_time" />
            <result property="contactId" column="contact_id" />
            <result property="contactType" column="contact_type" />
            <result property="fileSize" column="file_size" />
            <result property="fileName" column="file_name" />
            <result property="fileType" column="file_type" />
            <result property="status" column="status" />
    </resultMap>

    <sql id="Base_Column_List">
        message_id,session_id,message_type,message_content,send_user_id,send_user_nick_name,
        send_time,contact_id,contact_type,file_size,file_name,
        file_type,status
    </sql>

    <select id="selectChatMessageByContactIdList" resultType="com.mychat.entity.po.ChatMessage">
        SELECT
            *
        FROM
            chat_message
        <where>
            <if test="null != lastOffTime">
                send_time >= #{lastOffTime}
            </if>
            <if test="null != contactIdList and contactIdList.size() > 0">
                and contact_id in (<foreach collection="contactIdList" separator="," item="item">#{item}</foreach>)
            </if>
        </where>
    </select>
</mapper>
