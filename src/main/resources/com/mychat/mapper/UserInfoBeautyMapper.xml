<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mychat.mapper.UserInfoBeautyMapper">

    <resultMap id="BaseResultMap" type="com.mychat.entity.po.UserInfoBeauty">
            <id property="id" column="id" />
            <result property="email" column="email" />
            <result property="userId" column="user_id" />
            <result property="status" column="status" />
    </resultMap>

    <sql id="Base_Column_List">
        id,email,user_id,status
    </sql>

    <select id="loadBeautyAccountList" resultType="com.mychat.entity.po.UserInfoBeauty">
        SELECT
            *
        FROM
            user_info_beauty
        <where>
            <if test="userIdFuzzy != null and userIdFuzzy != ''">
                user_id like concat('%', #{userIdFuzzy}, '%')
            </if>
            <if test="emailFuzzy != null and emailFuzzy != ''">
                and email like concat('%', #{emailFuzzy}, '%')
            </if>
        </where>
    </select>
</mapper>
